{% extends '@User/Default/try.html.twig' %}
{% block categ %}

    <div>
        <b>История ваших заказов</b><br />

        <table border="1">
            {% for order in orders %}
                <tr>
                    <td>{{ order.date.format("H:i d.m.Y") }}</td>
                    <td>{{ order.phoneNumber }}</td>
                    <td>
                        {% if order.status == 1 %}
                            в процессе
                        {% elseif order.status == 2 %}
                            обработан
                        {% else %}
                            отклонен
                        {% endif %}
                    </td>
                    <td>
                Общая стоимость : {{ order.totalPrice }}
                    </td>
                    <td>
                <a href="{{ path('user_homepage.orders_info', {id:order.id}) }} ">Детали</a>
                    </td>
                </tr>
            {% endfor %}
        </table>

    </div>

{% endblock %}