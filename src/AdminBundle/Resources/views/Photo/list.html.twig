{% extends "@Admin/Default/index.html.twig" %}
{% block body %}
    <h3> фОТО товара {{ product.productName }} </h3>

    <a href="{{ path("admin_homepage.photo_add", {idProduct:product.id}) }}">Добавить фото</a>

    <table>
    {% for photo in product.photos %}
        <tr>
            <td> {{ photo.getTitle }} </td>
            <td>
                <img src="/Photos/{{ photo.getSmallFileName() }}" >

            </td>
            <td>
                <a href="/Photos/{{ photo.getFilename() }}" >Увеличить</a> </br>
                <a href="#">Редактирование</a>
                <a href="{{ path("admin_homepage.PhotoDelete" ,{id:photo.getId()} ) }}">Удалить</a> </br>
            </td>

        </tr>



        {% endfor %}
    </table>

{% endblock %}